<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Recipe Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lemon Rice (Chitranna) Recipe"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Lemon Rice Image -->
    <ImageView
        android:id="@+id/lemonRiceImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/lemonrice"
        android:contentDescription="Lemon Rice Image"
        android:layout_marginBottom="16dp"/>

    <!-- Recipe Procedure -->
    <TextView
        android:id="@+id/recipeProcedure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients and Steps to make Lemon Rice:"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"/>

    <!-- Steps of the Recipe -->
    <TextView
        android:id="@+id/lemonRiceProcedureSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lemon_rice_recipe_procedure"
        android:textSize="16sp"
        android:lineSpacingExtra="8dp"
        android:layout_marginBottom="16dp"/>


</LinearLayout>
