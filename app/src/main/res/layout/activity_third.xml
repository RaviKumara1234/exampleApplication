<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Toolbar for the Activity -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Food Categories"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!-- Welcome message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Welcome to Our App, Enjoy Exploring!"/>

    <!-- Search Bar for Recipe -->
    <AutoCompleteTextView
        android:id="@+id/searchRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for a recipe"
        android:drawableEnd="@drawable/ic_close"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionDone" />


    <!-- Food category buttons -->
    <Button
        android:id="@+id/categoryNorthIndian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="North Indian Cuisine"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/categorySouthIndian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="South Indian Cuisine"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/categoryStreetFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Street Food"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/categoryNonVegetarian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Non-Vegetarian Cuisine"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/viewFavoritesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Favorite Recipes"
        android:layout_marginTop="16dp"
        android:backgroundTint="#13309D"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"/>


</LinearLayout>
