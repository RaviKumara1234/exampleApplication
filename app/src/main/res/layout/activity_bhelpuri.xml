<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Recipe Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bhelpuri Recipe"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Bhelpuri Image -->
        <ImageView
            android:id="@+id/bhelpuriImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/bhelpuri"
            android:contentDescription="Bhelpuri Image"
            android:layout_marginBottom="16dp"/>

        <!-- Recipe Procedure -->
        <TextView
            android:id="@+id/recipeProcedure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients and Steps to make Bhelpuri:"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <!-- Steps of the Recipe -->
        <TextView
            android:id="@+id/procedureSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bhelpuri_recipe_procedure"
            android:textSize="16sp"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Add to Favorites Button -->
        <Button
            android:id="@+id/addFavoriteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Favorites"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>
